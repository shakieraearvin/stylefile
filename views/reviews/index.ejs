<!-- views/applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Your Style File</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Your Style File</h1>
    <a href="/users/<%=user._id%>/reviews/new">Add a Review</a>
    <ul>
      <% reviews.forEach((review)=>{ %>
      <li>
        <a href="/users/<%= user._id %>/reviews/<%= review._id %>">
        <%= review.itemName %>
      </a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
